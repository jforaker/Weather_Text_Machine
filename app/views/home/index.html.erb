<h3>Hello and Welcome to Weather Text Machine</h3>
<br>

<div class="user">
  <% if user_signed_in? %>
      <img style="display: inline-block" src="<%= current_user.image %>">

      <h5 style="display: inline;">Logged in as <%= current_user.name %></h5>

</div>
      <br>

      <%= render "users/edit" %>
  <% else %>
      <div>
        <%= link_to 'Login with Twitter to get started.', signin_path %>
      </div>
  <% end %>
