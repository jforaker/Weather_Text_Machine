<%= form_for(@user) do |f| %>

    <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, :class => "phone_us"  %>
    </div>

    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <br />
    <%= f.submit "Submit", :class => 'btn' %>
<% end %>


<script type="text/javascript">
    $(document).ready(function(){

        $('.phone_us').mask('(000) 000-0000');

    });
</script>